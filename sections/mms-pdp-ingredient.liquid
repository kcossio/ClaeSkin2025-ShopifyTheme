<style>
    .g-ingredient{
        padding: 50px 20px;
        background: {{ section.settings.bg }};
    }

    .g-ingredient-wrap{
        display: flex;
        gap: 50px;
    }

    .g-ingredient-wrap > div{
        width: 50%;
    }

    .g-ingredient-image{
        padding-top: 50%;
        position: relative;
    }

    .g-ingredient-image img{
        object-fit: cover;
        object-position: top;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        border-radius: 2px;
    }

    .g-ingredient-content{
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .g-ingredient-content h2{
        font-weight: 500;
        font-size: 42px;
        line-height: 45px;
        margin: 0;
    }

    .g-ingredient-content p{
        font-weight: 400;
        font-size: 18px;
        line-height: 24px;
        margin: 0;
    }

    .g-ingredient .g-cta{
        margin: 0;
        padding: 0;
    }

    .g-ingredient-block{
        padding: 20px 0 0 0;
        border-top: 1px solid #3C2D18;
    }

    .g-ingredient-block img{
        width: 51px;
        margin-bottom: 16.5px;
    }

    .g-ingredient-block p{
        font-size: 18px;
        line-height: 24px;
        margin: 0;
    }

    .g-ingredient-block p strong{
        display: block;
    }

    @media only screen and (max-width: 768px) {
        .g-ingredient-wrap{
            flex-direction: column;
            gap: 0;
        }

        .g-ingredient-wrap > div{
            width: 100%;
        }

        .g-ingredient-block{
            padding: 15px 0 0 0;
        }

        .g-ingredient-block img{
            width: 34px;
            margin-bottom: 11px;
        }

        .g-ingredient-block p{
            font-size: 12px;
            line-height: 16px;
        }

        .g-ingredient-content p{
            font-size: 12px;
            line-height: 16px;
        }

        .g-ingredient-content h2{
            font-size: 28px;
            line-height: 30px;
        }

        .g-ingredient{
            padding: 30px 20px;
        }

        .g-mobile{
            display: block;
        }

        .g-desktop{
            display: none;
        }
    }
</style>
<div class="g-ingredient">
    <div class="g-wrap">
        <div class="g-ingredient-wrap">
            <div class="g-ingredient-image g-desktop">
                <img src="{{ section.settings.image | image_url: width: "2000px" }}" width="" height="" alt="">
            </div>
            <div class="g-ingredient-content">
                <h2>{{ section.settings.title }}</h2>
                <div class="g-ingredient-image g-mobile">
                    <img src="{{ section.settings.image | image_url: width: "800px" }}" width="" height="" alt="">
                </div>
                <p>{{ section.settings.content }}</p>
                
                {% for block in section.blocks %}
                  <div class="g-ingredient-block">
                      <img src="{{ block.settings.icon | image_url: width: "800px" }}" width="" height="" alt="">
                      {{ block.settings.content }}
                  </div>
                {% endfor %}


                <div class="g-cta">
                    {%- assign product_form_id = 'product-form-' | append: section.id -%}
                    {%- for block in section.blocks -%}
                      {%- case block.type -%}
                        {%- when '@app' -%}
                          {% render block %}
                        {%- when 'buy_buttons' -%}
                          {%- render 'buy-buttons',
                            block: block,
                            product: product,
                            product_form_id: product_form_id,
                            section_id: section.id,
                            show_pickup_availability: true
                          -%}
                          <div class="g-cta-bottom">
                              {% if section.settings.cta_bottom_icon_1 != blank and section.settings.cta_bottom_text_1 != blank %}
                              <div>
                                  <img src="{{ section.settings.cta_bottom_icon_1 | image_url: width: "200px" }}" width="30" height="30" alt="">
                                  <span>{{ section.settings.cta_bottom_text_1 }}</span>
                              </div>
                              {% endif %}
                              {% if section.settings.cta_bottom_icon_2 != blank and section.settings.cta_bottom_text_2 != blank %}
                              <div>
                                  <img src="{{ section.settings.cta_bottom_icon_2 | image_url: width: "200px" }}" width="30" height="30" alt="">
                                  <span>{{ section.settings.cta_bottom_text_2 }}</span>
                              </div>
                              {% endif %}
                          </div>
                      {%- endcase -%}
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
</div>
    
{% schema %}
  {
    "name": "MMS PDP Ingredient",
    "settings": [
      {
        "type": "color",
        "id": "bg",
        "label": "Background"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "CTA"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA URL"
      },
      {
        "type": "color",
        "id": "cta_bg",
        "label": "CTA Background"
      },
      {
        "type": "color",
        "id": "cta_color",
        "label": "CTA Text Color"
      },
      {
        "type": "image_picker",
        "id": "cta_bottom_icon_1",
        "label": "CTA Bottom Icon 1"
      },
      {
        "type": "text",
        "id": "cta_bottom_text_1",
        "label": "CTA Bottom Text 1"
      },
      {
        "type": "image_picker",
        "id": "cta_bottom_icon_2",
        "label": "CTA Bottom Icon 2"
      },
      {
        "type": "text",
        "id": "cta_bottom_text_2",
        "label": "CTA Bottom Text 2"
      }
    ],
    "blocks": [
      {
        "type": "buy_buttons",
        "name": "t:sections.main-product.blocks.buy_buttons.name",
        "limit": 1,
        "settings": [
          {
            "type": "checkbox",
            "id": "show_dynamic_checkout",
            "default": true,
            "label": "t:sections.main-product.blocks.buy_buttons.settings.show_dynamic_checkout.label",
            "info": "t:sections.main-product.blocks.buy_buttons.settings.show_dynamic_checkout.info"
          },
          {
            "type": "checkbox",
            "id": "show_gift_card_recipient",
            "default": true,
            "label": "t:sections.main-product.blocks.buy_buttons.settings.show_gift_card_recipient.label",
            "info": "t:sections.main-product.blocks.buy_buttons.settings.show_gift_card_recipient.info"
          },
          {
            "type": "checkbox",
            "id": "show_prices",
            "default": false,
            "label": "Show Price and Compare Price"
          }
        ]
      },
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "MMS PDP Ingredient"
      }
    ]
  }
{% endschema %}