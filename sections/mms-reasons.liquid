<style>
    .g-reasons{
        padding: 50px 20px;
        background: {{ section.settings.bg }};
    }

    .g-reasons h2{
        font-weight: 500;
        font-size: 45px;
        line-height: 45px;
        text-align: center;
    }

    .g-reasons-wrap{
        margin: 50px 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 40px;
    }

    .g-reason{
        width: calc(33.333% - 27px);
        min-width: 429px;
    }

    .g-reason h3{
        font-weight: 400;
        font-size: 30px;
        line-height: 45px;
        margin: 20px 0;
        color: #2C1A0B;
    }

    .g-reason p{
        font-weight: 300;
        font-size: 20px;
        line-height: 30px;
        margin: 0;
        color: #2C1A0B;
    }

    .g-reason .g-reason-image{
        padding-top: 60%;
        position: relative;
        overflow: hidden;
        background: #000;
    }

    .g-reason .g-reason-image img{
        object-fit: cover;
        height: 100%;
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
        display: block;
        border: 0.75px solid #2C1A0B;
        transition: 0.1s ease-out;
    }

    .g-reason .g-reason-image img:hover{
        transform: scale(1.05);
        opacity: 0.7;
    }

    .g-reason .g-reason-image span{
        position: absolute;
        right: 0;
        bottom: 0;
        font-size: 30px;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #2C1A0B;
        color: #fff;
    }

    .g-reasons .g-cta{
        padding: 0;
    }

    @media only screen and (max-width: 768px) {
        .g-reasons{
            padding: 30px;
        }

        .g-reasons h2{
            font-size: 30px;
            line-height: 30px;
            margin: 0;
        }

        .g-reasons-wrap{
            margin: 20px 0;
        }

        .g-reason{
            width: 100%;
            min-width: unset;
            padding-bottom: 30px;
            border-bottom: 1px solid #2C1A0B;
        }

        .g-reason .g-reason-image span{
            font-size: 20px;
            line-height: 30px;
            width: 33px;
            height: 33px;
        }

        .g-reason h3{
            font-size: 20px;
            line-height: 30px;
            margin: 11px 0;
        }

        .g-reason p{
            font-size: 14px;
            line-height: 20px;
        }
    }
</style>
<div class="g-reasons">
    <div class="g-wrap">
        <h2>{{ section.settings.title }}</h2>
        <div class="g-reasons-wrap">
            {% for block in section.blocks %}
              <div class="g-reason">
                  <div class="g-reason-image">
                      <img src="{{ block.settings.image | image_url: width: "2000px" }}" width="" height="" alt="">
                      <span>{{ forloop.index }}</span>
                  </div>
                  <h3>{{ block.settings.title }}</h3>
                  {{ block.settings.content }}
              </div>
            {% endfor %}
        </div>
        <div class="g-cta">
            <a href="{{ section.settings.cta_url }}">{{ section.settings.cta_text }}</a>
            <div class="g-cta-bottom">
                {% if section.settings.cta_bottom_icon_1 != blank and section.settings.cta_bottom_text_1 != blank %}
                <div>
                    <img src="{{ section.settings.cta_bottom_icon_1 | image_url: width: "200px" }}" width="30" height="30" alt="">
                    <span>{{ section.settings.cta_bottom_text_1 }}</span>
                </div>
                {% endif %}
                {% if section.settings.cta_bottom_icon_2 != blank and section.settings.cta_bottom_text_2 != blank %}
                <div>
                    <img src="{{ section.settings.cta_bottom_icon_2 | image_url: width: "200px" }}" width="30" height="30" alt="">
                    <span>{{ section.settings.cta_bottom_text_2 }}</span>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
    
{% schema %}
  {
    "name": "MMS Reasons",
    "settings": [
      {
        "type": "color",
        "id": "bg",
        "label": "Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "header",
        "content": "CTA"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA URL"
      },
      {
        "type": "color",
        "id": "cta_bg",
        "label": "CTA Background"
      },
      {
        "type": "color",
        "id": "cta_color",
        "label": "CTA Text Color"
      },
      {
        "type": "image_picker",
        "id": "cta_bottom_icon_1",
        "label": "CTA Bottom Icon 1"
      },
      {
        "type": "text",
        "id": "cta_bottom_text_1",
        "label": "CTA Bottom Text 1"
      },
      {
        "type": "image_picker",
        "id": "cta_bottom_icon_2",
        "label": "CTA Bottom Icon 2"
      },
      {
        "type": "text",
        "id": "cta_bottom_text_2",
        "label": "CTA Bottom Text 2"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "MMS Reasons"
      }
    ]
  }
{% endschema %}