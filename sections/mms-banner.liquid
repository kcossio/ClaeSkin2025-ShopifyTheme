                </div>
                {{ section.settings.ratings }}
            </div>
            <h1>{{ section.settings.title }}</h1>
            <p>{{ section.settings.subtitle }}</p>
            
            <div class="g-cta">
                <a href="{{ section.settings.cta_url }}">{{ section.settings.cta_text }}</a>
                <div class="g-cta-bottom">
                    {% if section.settings.cta_bottom_icon_1 != blank and section.settings.cta_bottom_text_1 != blank %}
                    <div>
                        <img src="{{ section.settings.cta_bottom_icon_1 | image_url: width: "200px" }}" width="30" height="30" alt="">
                        <span>{{ section.settings.cta_bottom_text_1 }}</span>
                    </div>
                    {% endif %}
                    {% if section.settings.cta_bottom_icon_2 != blank and section.settings.cta_bottom_text_2 != blank %}
