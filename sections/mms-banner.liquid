<style>
    .g-banner{
        background: {{ section.settings.bg }};
    }

    .g-banner-wrap{
        display: flex;
        justify-content: center;
        max-width: 1440px;
        margin: 0 auto;
    }

    .g-banner-content,
    .g-banner-image{
        width: 50%;
    }

    .g-banner-content{
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 0 15px;
        max-width: 510px;
        align-items: center;
    }

    .g-banner-content h1{
        font-weight: 500;
        text-align: center;
        font-size: 55px;
        line-height: 52px;
        margin: 22.5px 0;
        color: #2C1A0B;
    }

    .g-banner-content p{
        font-weight: 400;
        font-size: 18px;
        line-height: 24px;
        margin: 0;
        text-align: center;
        color: #2C1A0B;
    }

    .g-banner-image{
        background-image: url("https://cdn.shopify.com/s/files/1/0906/9782/6608/files/banner_bg.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
    }

    .g-banner-image img, .g-banner-mobile img{
        width: 100%;
        max-width: 100%;
        position: relative;
        object-fit: cover;
        height: 100%;
    }
    
    .g-banner-stars{
        display: flex;
        align-items: center;
        gap: 0;
    }

    .g-banner-stars svg{
        width: 18px;
    }

    .g-banner-stars-wrap{
        display: inline-flex;
        justify-content: center;
        gap: 10px;
        align-items: center;
        padding: 4px 12px;
        border: 1px solid #3C2D18;
        border-radius: 3px;
    }

    .g-banner-stars-wrap p{
        margin: 0;
    }

    @media only screen and (max-width: 768px) {
        .g-banner-wrap{
            flex-direction: column;
        }

        .g-banner-content,
        .g-banner-image{
            width: 100%;
        }
        
        .g-banner-content{
            padding: 16px 7px;
            text-align: center;
        }

        .review-stats--left{
            justify-content: center;
        }

        .g-banner-content h1{
            font-size: 37px;
            line-height: 35px;
            margin: 10px 0 0 0;
        }

        .g-banner-content > p{
            font-size: 12px;
            line-height: 16px;
            margin-top: 9px;
        }

        .g-banner-stars-wrap p{
            font-size: 12px;
            line-height: 16px;
        }

        .g-banner .g-cta{
            margin: 15px auto;
            padding: 0;
        }

        .g-banner .g-cta a{
            font-size: 14px;
            line-height: 16px;
            padding: 20px;
        }

        .g-mobile{
            display: block !important;
        }

        .g-desktop{
            display: none !important;
        }

        .g-banner-wrap{
            background-image: url("https://cdn.shopify.com/s/files/1/0906/9782/6608/files/banner_bg.jpg");
            background-repeat: no-repeat;
            background-size: auto 60%;
            background-position: bottom;
            position: relative;
        }

        .g-banner-wrap::before{
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top, #E8E0DC 0%, rgba(232, 224, 220, 0) 100%);
        }

        .g-banner-content{
            position: relative;
        }
    }
</style>
