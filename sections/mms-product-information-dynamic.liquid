                    {% else %}
                      {% comment %}
                        <div class="g-pdp-cta-stock">
                            <span id="stock-status" class="{% if product.available %}instock{% else %}outofstock{% endif %}"></span>
                            {% if product.available %}
                              <p>In stock - Available for delivery</p>
                            {% else %}
                              <p>Out of stock - Not Available for delivery</p>
                            {% endif %}
                        </div>
                      {% endcomment %}
                      <script>
                      document.addEventListener("DOMContentLoaded", function () {
                          function addDaysToDate() {
                              const days = 14;
                              let dateElement = document.getElementById("stock-date");
                              if (dateElement) {
                                  let currentDate = new Date();
                                  currentDate.setDate(currentDate.getDate() + days);
                                  
                                  let options = { year: 'numeric', month: 'long', day: 'numeric' };
                                  dateElement.textContent = currentDate.toLocaleDateString('en-US', options);
                              }
                          }
                          
                          addDaysToDate();
                      });
                      </script>
                    {% endif %}

