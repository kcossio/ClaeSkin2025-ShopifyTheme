                          <span class="g-accordion-icon g-accordion-icon-plus">+</span>
                          <span class="g-accordion-icon g-accordion-icon-minus">-</span>
                      </div>
                      <div class="g-accordion-content">
                          {{ section.settings.accord_content_2 }}
