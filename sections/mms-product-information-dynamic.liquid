        document.querySelectorAll(".g-pdp-upsell-atc").forEach(upsells => {
        upsells.addEventListener("click", function(){
            const vid = this.getAttribute("data-vid");

            fetch("/cart/add.js", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    id: vid,
