                      <div class="g-accordion-content">
                          <img src="{{ section.settings.accord_content_3 | image_url: width: "1980px" }}" alt="" width="" height="">
                      </div>
                    </div>
                    {% endif %}
                    {% if section.settings.accord_title_4 != blank %}
                    <div class="g-accordion-item">
                      <div class="g-accordion-header">
                          <span>{{ section.settings.accord_title_4 }}</span>
                          <span class="g-accordion-icon g-accordion-icon-plus">+</span>
                          <span class="g-accordion-icon g-accordion-icon-minus">-</span>
                      </div>
                      <div class="g-accordion-content">
                          {{ section.settings.accord_content_4 }}
                      </div>
                    </div>
                    {% endif %}

                </div>

                
                <script>
                    // Select all accordion headers
                    const headers = document.querySelectorAll('.g-accordion-header');
                
                    headers.forEach(header => {
                      header.addEventListener('click', () => {
                          const content = header.nextElementSibling;
                  
                          // Toggle active class for the header
                          header.classList.toggle('g-active');
                  
                          // Show or hide the content with smooth transition
                          if (content.classList.contains('open')) {
                            content.classList.remove('open');
                          } else {
                            content.classList.add('open');
                          }
                      });
                    });
                </script>

             
