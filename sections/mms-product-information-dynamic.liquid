                      <style>
                          .{{ section.id }}.g-cta-limited{
                              justify-content: center;
                              padding-bottom: 10px;
                          }
                        
                          .{{ section.id }} .g-cta-limited-circle{
                              position: relative;
                              background: #F28F3B1A;
                              width: 25px;
                              height: 25px;
                              border-radius: 25px;
                              display: flex;
                              align-items: center;
                              justify-content: center;
                          }
          
                          .{{ section.id }} .g-cta-limited-circle::before{
                              box-sizing: border-box;
                              width: 21px;
                              height: 21px;
                              border-radius: 21px;
                              background: #F28F3B66;
                              content: '';
                              position: absolute;
                          }
          
                          .{{ section.id }} .g-cta-limited-circle-sub{
                              position: relative;
                              background: #F28F3BA6;
                              width: 15px;
                              height: 15px;
                              border-radius: 15px;
                              display: flex;
                              align-items: center;
                              justify-content: center;
                          }
          
                          .{{ section.id }} .g-cta-limited-circle-sub::before{
                              box-sizing: border-box;
                              width: 11px;
                              height: 11px;
                              border-radius: 11px;
                              background: #F28F3B;
                              content: '';
                              position: absolute;
                          }
          
                          @media only screen and (max-width: 768px) {
                              .{{ section.id }} .g-cta-limited{
                                  justify-content: center;
                              }
                          }
                      </style>
