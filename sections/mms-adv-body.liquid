<style>
    .g-adv-body{
        padding: 20px;
    }

    .quote-box {
        padding: 10px 10px 10px 25px;
        position: relative;

        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .quote-box::before{
        width: 12px;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
        border-radius: 10px;
        content: '';
        background: #3C2D18;
    }

    .g-adv-bti--content{
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .g-adv-bti--content p{
        font-weight: 400;
        font-size: 18px;
        line-height: 24px;
        color: #2C1A0B;
        margin: 0;
    }

    .g-adv-body-text-image{
        display: flex;
        align-items: center;
        gap: 67px;
        margin-top: 41px;
    }

    .g-adv-bti--content{
        width: calc(100% - 440px);
    }

    .g-adv-bti--content ul{
        margin: 0;
        padding: 0 0 0 20px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .g-adv-bti--content ul li{
        color: #2C1A0B;
        font-weight: 400;
        font-size: 18px;
        line-height: 24px;
    }

    .g-adv-bti--image{
        width: 440px;
        height: 456px;
    }

    .g-adv-bti--image img{
        object-fit: cover;
        height: 100%;
        width: 100%;
        border-radius: 10px;
        display: block;
    }

    .g-adv-body .g-wrap{
        max-width: 1200px;
    }

    .g-adv-body-headline{
        margin-top: 78px;
    }

    .g-adv-body-headline h2{
        text-align: center;
        color: #2C1A0B;
        margin: 0;
        font-weight: 500;
        font-size: 42px;
        line-height: 45px;
    }

    .g-adv-body-headline p{
        color: #2C1A0B;

        font-weight: 400;
        font-size: 28px;
        line-height: 120%;
        text-align: center;
    }

    .g-adv-bti--content .g-cta{
        max-width: 388px;
        margin: 0;
    }

    .g-adv-bti--content .g-cta a{
        border-radius: 30px;
        padding: 17px 0;
        font-size: 22px;
    }

    .g-adv-body-icons{
        display: flex;
        background: #fff;
        padding: 24px;
        border-radius: 24px;
        border: 1px solid #E6DDD6;
        gap: 20px;
        margin-top: 25px;
    }

    .g-adv-body-icons > div span{
        font-weight: 400;
        font-size: 18px;
        line-height: 120%;
        color: #2C1A0B;
    }

    .g-adv-body-icons > div{
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        gap: 20px;
    }

    .g-adv-bti--quoted{
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .g-adv-bti--content h3,
    .g-adv-bti--content h4{
        margin: 10px 0;
    }

    @media only screen and (max-width: 1024px) {
        .g-adv-body-headline{
            margin-top: 14px;
        }

        .g-adv-body-headline p{
            font-size: 16px;
        }

        .g-adv-body-headline h2{
            font-size: 28px;
            line-height: 30px;
        }

        .g-adv-body-text-image{
      
            flex-direction: column;
            gap: 20px;
            margin-top: 20px;
        }

        .g-adv-bti--content{
            width: 100%;
        }

        .g-adv-bti--content p,
        .g-adv-bti--content ul li{
            font-size: 14px;
            line-height: 18px;
        }

        .g-adv-bti--content .g-cta a {
            font-size: 19px;
            padding: 12px 0;
            text-transform: unset;
        }

        .g-adv-body-icons{
            flex-direction: column;
        }

        .g-adv-body-icons > div span{
            font-size: 14px;
        }

        .g-adv-bti--image{
            width: 100%;
          display:none;
        }
    }
</style>
<div class="g-adv-body">
    <div class="g-wrap">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when "@app" %}
              {% render block %}
            {% when 'new-title-widget' %}
              {% render 'mms-adv-body-new-title', block: block %}
            {% when 'title-widget' %}
              {% render 'mms-adv-body-title-widget', block: block %}
            {% when 'image-text' %}
              {% render 'mms-adv-body-image-text', block: block %}
            {% when 'icons' %}
              {% render 'mms-adv-body-icons', block: block %}
          {% endcase %}
        {% endfor %}

    </div>
</div>

