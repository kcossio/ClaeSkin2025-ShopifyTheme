    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        new Swiper('.g-itb-slider', {
            spaceBetween: 20,
            slidesPerView: 1,
            grabCursor: true,
            navigation: {
                nextEl: '.g-prev',
                prevEl: '.g-next'
            },
            pagination:  {
                el: ".swiper-pagination",
                clickable: true, 
            },
            breakpoints: {
                769: {
                    slidesPerView: 3
                }
            }
        });

    });
</script>
                          
{% schema %}
  {
    "name": "MMS Image Text Blocks",
   "settings": [
      {
        "type": "color",
        "id": "bg",
        "label": "Background Color",
        "default": "#F5E8DE"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Sub Title"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "MMS Image Text Blocks"
      }
    ]
  }
