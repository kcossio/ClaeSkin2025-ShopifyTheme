<style>
    .{{ section.id }}.g-image-text-blocks{
        padding: 50px 20px;
        background-color: {{ section.settings.bg }};
    }

    .{{ section.id }} .g-image-text-block--title{
        font-size: 40px;
        font-weight: 550;
        line-height: 42px;
        text-align: center;
        margin: 0 0 20px 0;
    }

    .{{ section.id }} .g-image-text-block--sub{
        font-size: 18px;
        font-weight: 400;
        line-height: 27px;
        text-align: center;
        margin: 0 0 50px 0;
    }

    .{{ section.id }} .g-image-text-blocks-wrap{
        display: flex;
        gap: 20px;
    }

    .{{ section.id }} .g-image-text-block{
        padding: 10px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        border: 1px solid #000;
        flex: 1;
        background: #fff;
    }

    .{{ section.id }} .g-itb--image{
        height: 257px;
    }

    .{{ section.id }} .swiper.g-itb-slider{
        padding-bottom: 50px;
    }

    .{{ section.id }} .swiper-pagination-bullet{
        height: 3px;
        border-radius: 3px;
        width: 22.5px;
        transition: 0.2s ease-out;
    }

    .{{ section.id }} .swiper-pagination-bullet-active{
        width: 60px;
        background-color: #3C2D18;
    }

    .{{ section.id }} .g-itb--image img{
        object-fit: cover;
        height: 100%;
        width: 100%;
        display: block;
    }

    .{{ section.id }} .g-itb--content{
        font-size: 21px;
        font-weight: 300;
        line-height: 27px;
    }

    .{{ section.id }} .g-itb--name{
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 21px;
        font-weight: 300;
        line-height: 27px;
    }

    .{{ section.id }} .g-itb--name span{
        font-weight: 400;
    }

    .{{ section.id }} .g-itb--name svg{
        width: 20px;
    }

    .{{ section.id }} .g-pdp-cta-moneyback {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
        font-size: 21px;
        font-weight: 400;
        line-height: 25.05px;
    }

    .{{ section.id }} .g-pdp-cta-moneyback img{
        width: 24px;
    }

    .{{ section.id }} .g-itb-cta{
        text-align: center;
        margin-top: 50px;
    }

    .{{ section.id }} .g-itb-cta a{
        width: 100%;
        max-width: 584px;
        height: 84px;
        border: 1px solid #000;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        margin-bottom: 20px;
        background-color: #E4F5A1;
        color: #000;
        text-decoration: none;

        font-size: 24px;
        font-weight: 500;
        line-height: 24px;
    }

    .{{ section.id }} .g-itb-slider-wrapper{
        margin-top: 67px;
        padding: 0 76px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .{{ section.id }} .g-prev,
    .{{ section.id }} .g-next{
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #3C2D18;
        border-radius: 36px;
        position: absolute;
        cursor: pointer;
    }

    .{{ section.id }} .g-prev{
        left: 20px;
    }

    .{{ section.id }} .g-next{
        right: 20px;
    }

    @media only screen and (max-width: 768px) {
        .{{ section.id }} .swiper-pagination-bullet-active{
            background: #000;
        }

        .{{ section.id }}.g-image-text-blocks{
            padding: 30px 0;
        }

        .{{ section.id }} .g-itb-slider{
            padding-bottom: 40px;
        }

        .{{ section.id }} .g-itb--content, .{{ section.id }} .g-itb--name span{
            font-size: 14px;
            line-height: 18px;
        }

        .{{ section.id }} .g-itb--name{
            font-size: 12px;
            line-height: 12px;
        }

        .{{ section.id }} .g-itb--review svg{
            width: 15.6px;
            height: 15.6px;
        }

        .{{ section.id }} .g-itb--image{
            height: 190px;
        }

        .{{ section.id }} .g-image-text-block--title{
            font-size: 28px;
            line-height: 30px;
            padding: 0 20px;
        }

        .{{ section.id }} .g-image-text-block--sub{
            font-size: 12px;
            line-height: 18px;
            margin: 0 0 20px 0;
            padding: 0 20px;
        }
        
        .{{ section.id }} .g-itb-cta{
            margin-top: 20px;
        }

        .{{ section.id }} .g-itb-cta a{
            height: 56px;
            font-size: 16px;
        }

        .{{ section.id }} .g-pdp-cta-moneyback{
            font-size: 14px;
        }

        .{{ section.id }} .g-itb-slider-wrapper {
            margin-top: 25px;
            padding: 0 0 0 20px;
        }

        .{{ section.id }} .swiper.g-itb-slider{
            padding-right: 10%;
        }

        .{{ section.id }} .g-prev,
        .{{ section.id }} .g-next{
            display: none;
        }
    }
</style>
